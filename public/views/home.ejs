<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FASTwitter</title>
    <link rel="stylesheet" href="styles.css" />
    <link rel="stylesheet" href="extraStyles.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- sidebar starts -->
    <div class="sidebar">
      <!-- <i class="fab fa-twitter"></i> -->
      <h1>FASTwitter</h1>

      <div class="sidebarOption active">
        <span class="material-icons"> home </span>
        <h2>Home</h2>
      </div>

      <div class="sidebarOption">
        <span class="material-icons"> perm_identity </span>
        <h2>Profile</h2>
      </div>

      <div class="sidebarOption">
        <span class="material-icons"> more_horiz </span>
        <h2>More</h2>
      </div>
      <button class="sidebar__tweet">Tweet</button>
    </div>
    <!-- sidebar ends -->

    <!-- feed starts -->
    <div class="feed">
      <div class="feed__header">
        <h2>Home</h2>
      </div>

      <!-- tweetbox starts -->
      <div class="tweetBox">
        <form action="/newTweet" method="POST" >
          <div class="tweetbox__input">
            <img
              src="https://i.pinimg.com/originals/a6/58/32/a65832155622ac173337874f02b218fb.png"
              alt=""
            />
            <input
              id="tweet"
              name="tweet"
              oninput="countWord()"
              type="text"
              placeholder="What's happening?"
            />
            <%var username = User.username%>
            <input type="hidden" name="username" value=<%=username%> /> 
            
            <!-- username= -->
          </div>
          <button class="tweetBox__tweetButton">Tweet</button>
          <p style="margin-left: 10px">
            Words Remaining:
            <span id="show">120</span>
          </p>
        </form>
      </div>
      <!-- tweetbox ends -->

      <!-- post starts -->
      <div class="post">
        <div class="post__avatar">
          <img
            src="https://i.pinimg.com/originals/a6/58/32/a65832155622ac173337874f02b218fb.png"
            alt=""
          />
        </div>

        <div class="post__body">
          <div class="post__header">
            <div class="post__headerText">
              <h3>Saad Berry</h3>
            </div>
            <div class="post__headerDescription">
              <p>This is a tweet. Trust me.</p>
            </div>
          </div>

          <div class="post__footer">
            <!-- <span class="material-icons"> repeat </span> -->
            <span class="material-icons"> favorite_border </span>
            <!-- <span class="material-icons"> publish </span> -->
          </div>
        </div>
      </div>
      <!-- post ends -->
    </div>

   
    <!-- feed ends -->

    <!-- widgets starts -->
    <div class="widgets">
      <div class="widgets__input">
        <span class="material-icons widgets__searchIcon"> search </span>
        <input type="text" placeholder="Search Twitter" />
      </div>

      <div class="widgets__widgetContainer">
        <h2 class="text-lg">What's happening around the globe</h2>
        <blockquote class="twitter-tweet">
          <p lang="en" dir="ltr">
        
            <a
              href="https://twitter.com/HasbullaHive/status/1525873619707908096?s=20&t=caFt5j5ViHDMVHgZRfLM8w"
              ></a
            >.
            <a
              href="https://twitter.com/HasbullaHive/status/1525873619707908096?s=20&t=caFt5j5ViHDMVHgZRfLM8w"
              ></a
            >
            <a
              href="https://twitter.com/HasbullaHive/status/1525873619707908096?s=20&t=caFt5j5ViHDMVHgZRfLM8w"
              ></a
            >
            <a href="http://t.co/YuKy2rcjyU">pic.twitter.com/YuKy2rcjyU</a>
          </p>
          
          <a
            href="https://twitter.com/HasbullaHive/status/1525873619707908096?s=20&t=caFt5j5ViHDMVHgZRfLM8w"
            ></a
          >
        </blockquote>
        <script
          async
          src="https://platform.twitter.com/widgets.js"
          charset="utf-8"
        ></script>
      </div>
    </div>
    <!-- widgets ends -->

    <script>
      function countWord() {
        // Get the input text value
        var words = document.getElementById("word").value;

        // Initialize the word counter
        var count = 0;
        var remain = 120;

        // Split the words on each
        // space character
        var split = words.split(" ");

        // Loop through the words and
        // increase the counter when
        // each split word is not empty
        for (var i = 0; i < split.length; i++) {
          if (split[i] != "") {
            count += 1;
            remain -= 1;
            if (remain < 0) {
              alert("You have reached the max word limit");
            }
          }
        }

        // Display it as output
        document.getElementById("show").innerHTML = remain;
      }
    </script>
  </body>
</html>





